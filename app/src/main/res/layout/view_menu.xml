<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_bg_menu"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="0.75">

        <RelativeLayout
            android:id="@+id/ui_rl_menu_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.25"
            android:padding="5dp">

            <ImageView
                android:id="@+id/ui_img_menu_map"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:src="@drawable/first_map" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ui_rl_menu_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.25"
            android:padding="5dp">

            <ImageView
                android:id="@+id/ui_img_menu_chat"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:src="@drawable/fisrt_chat" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ui_rl_menu_profil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.25"
            android:padding="5dp">

            <ImageView
                android:id="@+id/ui_img_menu_profil"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:src="@drawable/first_profil" />

        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>
