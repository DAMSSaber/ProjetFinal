<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_corner_first"
    android:orientation="horizontal"
    android:padding="10dp">


    <ImageView
        android:id="@+id/ui_image_profile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        android:src="@drawable/image_profil" />

    <RelativeLayout
        android:id="@+id/ui_content_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ui_image_profile">

        <TextView
            android:id="@+id/author_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/message_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/author_two"
            android:layout_marginLeft="10dp"
            android:textColor="@color/color_bg_menu"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/selfie_two"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/message_two"
            android:layout_marginLeft="5dp"
            android:scaleType="fitXY"
            android:textColor="@android:color/white" />

    </RelativeLayout>
</RelativeLayout>