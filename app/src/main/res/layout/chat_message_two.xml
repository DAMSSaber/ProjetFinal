<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_corner_second"
    android:padding="10dp">


    <ImageView
        android:id="@+id/ui_image_profile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        android:src="@drawable/image_profil" />

    <RelativeLayout
        android:id="@+id/ui_content_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/ui_image_profile">

        <TextView
            android:id="@+id/author__"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="ddd"
            android:textColor="@color/color_yellow"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/message__"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/author__"
            android:layout_marginRight="10dp"
            android:textColor="@color/color_yellow"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/selfie__"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/message__"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            android:textColor="@android:color/white" />

    </RelativeLayout>
</RelativeLayout>